{
    "plugins": ["plugins/markdown"],
    "recurseDepth": 10,
    "source": {
      "include": ["src"],
      "includePattern": ".js$",
      "excludePattern": "(node_modules/|docs)",
      "exclude": ["src/__tests__/"]
    },
    "templates": {
      "cleverLinks": true,
      "monospaceLinks": true
    },
    "opts": {
      "destination": "./docs/",
      "recurse": true,
      "readme": "../readme.md",
      "template": "./node_modules/docdash"
    }
}